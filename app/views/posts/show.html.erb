<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Avatar:</strong><br />
  <% if @post.avatar.previewable? %>
    <%= image_tag @post.avatar.preview(
      resize_to_fit: [500, 500]
    ) %>
  <% elsif @post.avatar.variable? %>
    <%= image_tag @post.avatar.variant(
      resize_to_fit: [500, 500]
    ) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
